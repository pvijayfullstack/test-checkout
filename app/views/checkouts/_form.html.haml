= form_for @checkout do |f|
  -if @checkout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checkout.errors.count, "error")} prohibited this checkout from being saved:"
      %ul
        - @checkout.errors.full_messages.each do |msg|
          %li= msg
  %p= "TODO add form with pricing rules heres"

  = f.collection_select :pricing_rule_ids, @pricing_rules, :id, :description, {}, { :selected => @checkout.pricing_rule_ids, :multiple => true }

  .actions
    = f.submit 'Save'
