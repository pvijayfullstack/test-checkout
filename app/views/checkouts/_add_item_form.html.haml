%tr{:id => product.product_code}
  %td= product.product_code
  %td= product.name
  %td= product.price
  %td
    = form_for @transaction do |f|
      .field
        = f.hidden_field :checkout_id, :value => @checkout.id
      .field
        = f.hidden_field :product_id, :value => product.id
      .field
        = f.hidden_field :no_of_items, :value => 1
      .actions
        = f.submit 'Add'
